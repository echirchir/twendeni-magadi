<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:weightSum=".7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contributed_by"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingStart="4dp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:text="@string/full_name_sample"
            android:textColor="@color/mine_shaft"
            android:layout_weight=".2"/>

        <TextView
            android:id="@+id/contribution_date"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="@string/contribution_date"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/contribution_amount"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:paddingRight="8dp"
            android:layout_gravity="end|center_vertical"
            android:text="KES 30,000"/>

        <ImageView
            android:id="@+id/contribution_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingEnd="4dp"
            android:src="@drawable/success"
            android:paddingRight="4dp"
            android:gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pledge_name"
            android:layout_width="0dp"
            android:paddingStart="8dp"
            android:layout_weight=".7"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="John Doe / 10000"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/payment_mode"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="end|center_vertical"
            android:layout_gravity="center_vertical|end"
            android:layout_height="wrap_content"
            android:text="B TRANSFER"
            android:paddingRight="8dp" />

    </LinearLayout>

</LinearLayout>