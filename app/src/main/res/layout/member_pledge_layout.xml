<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:weightSum=".7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member_name"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingStart="4dp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:text="@string/full_name_sample"
            android:textColor="@color/mine_shaft"
            android:layout_weight=".4"/>

        <TextView
            android:id="@+id/pledge_amount"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:paddingRight="8dp"
            android:layout_gravity="end|center_vertical"
            android:text="KES 30,000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pledge_date"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="@string/date_sample"
            android:paddingRight="8dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_limit"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:max="100"
        android:maxHeight="8dp"
        android:minHeight="8dp"
        android:progress="60"
        android:progressDrawable="@drawable/secondary_progress_design"
        android:paddingLeft="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paid"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="@string/paid_amount"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/pledge_progress"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="center|center_vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/performance"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/pledge_percentage"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:gravity="end|center_vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="60%"
            android:paddingRight="8dp" />

    </LinearLayout>

</LinearLayout>